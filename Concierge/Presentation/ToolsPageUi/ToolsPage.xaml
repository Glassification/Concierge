                            Height="50"
                            Width="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Foreground="Green"
                            Click="ButtonResetHistory_Click"
                            Margin="10, 0, 60, 0"
                            ToolTip="Divide Loot">
