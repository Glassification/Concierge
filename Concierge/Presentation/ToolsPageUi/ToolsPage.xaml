                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Background="#17112E"
                              HeadersVisibility="Column"
                              IsReadOnly="True"
                              HorizontalGridLinesBrush="Transparent"
                              VerticalGridLinesBrush="Transparent"
                              CanUserResizeColumns="False"
                              CanUserAddRows="False"
                              MaxHeight="{Binding Path=AbilitiesHeight}"
                              BorderThickness="0"
                              Style="{DynamicResource DGHeaderStyle}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="Roll"
                                Binding="{Binding Roll}"
                                Width="33*"
                                ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Dice"
                                Binding="{Binding Dice}"
                                Width="33*"
                                ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Total"
                                Binding="{Binding Total}"
                                Width="33*"
                                ElementStyle="{StaticResource ColumnElementStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>

        <!--Loot Splitter-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid Grid.Row="0"
                    Background="#0B061E"
                    Margin="3, 3, 3, 0">
                <TextBlock Text="Divide Loot"
                           Foreground="White"
                           FontSize="23"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="150, 0, 0, 0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ButtonDivideLoot"
                            Height="50"
                            Width="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Foreground="Blue"
                            Click="ButtonDivideLoot_Click"
                            Margin="10, 0, 10, 0"
                            ToolTip="Divide Loot">
                        <materialDesign:PackIcon Kind="Division" Height="25" Width="25" Margin="10"/>
                    </Button>
                    <Button x:Name="ButtonResetLoot"
                            Height="50"
                            Width="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Foreground="Blue"
                            Click="ButtonResetLoot_Click"
                            Margin="10, 0, 60, 0"
                            ToolTip="Reset">
                        <materialDesign:PackIcon Kind="Refresh" Height="25" Width="25" Margin="10"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!--Body-->
            <Grid Grid.Row="1"
                  Background="#0B061E"
                  Margin="3, 0, 3, 3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <!--Input-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16*"/>
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                    </Grid.RowDefinitions>

                    <!--Players-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#161223"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Players"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <TextBox x:Name="PlayersInput"
                                     Background="#ff3e3e42"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="20"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     MaxLength="5"
                                     GotFocus="PlayersInput_GotFocus"
                                     LostFocus="PlayersInput_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Copper-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ffb87333"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Copper"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <TextBox x:Name="CopperInput"
                                     Background="#ff3e3e42"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="20"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     MaxLength="10"
                                     GotFocus="CopperInput_GotFocus"
                                     LostFocus="CopperInput_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Silver-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="Silver"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Silver"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <TextBox x:Name="SilverInput"
                                     Background="#ff3e3e42"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="20"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     MaxLength="10"
                                     GotFocus="SilverInput_GotFocus"
                                     LostFocus="SilverInput_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Electrum-->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ff50c878"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Electrum"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <TextBox x:Name="ElectrumInput"
                                     Background="#ff3e3e42"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="20"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     MaxLength="10"
                                     GotFocus="ElectrumInput_GotFocus"
                                     LostFocus="ElectrumInput_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Gold-->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ffCFB53B"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Gold"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <TextBox x:Name="GoldInput"
                                     Background="#ff3e3e42"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="20"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     MaxLength="10"
                                     GotFocus="GoldInput_GotFocus"
                                     LostFocus="GoldInput_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Platinum-->
                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ffe5e4e2"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Platinum"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <TextBox x:Name="PlatinumInput"
                                     Background="#ff3e3e42"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="20"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     MaxLength="10"
                                     GotFocus="PlatinumInput_GotFocus"
                                     LostFocus="PlatinumInput_LostFocus"/>
                        </Grid>
                    </Grid>

                </Grid>

                <!--Loot Grid-->
                <Grid Grid.Column="1"
                      Margin="3, 0, 3, 3">
                    <DataGrid x:Name="DivideLootDataGrid"
                      AutoGenerateColumns="False"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#17112E"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      HorizontalGridLinesBrush="Transparent"
                      VerticalGridLinesBrush="Transparent"
                      CanUserResizeColumns="False"
                      CanUserAddRows="False"
                      MaxHeight="{Binding Path=AbilitiesHeight}"
                      BorderThickness="0"
                      Style="{DynamicResource DGHeaderStyle}"
                      SelectionMode="Single"
                      SelectionChanged="DivideLootDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                        Header="Player"
                        Binding="{Binding Name}"
                        Width="16*"
                        ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                        Header="Total"
                        Binding="{Binding Total}"
                        Width="14*"
                        ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                        Header="Platinum"
                        Binding="{Binding Platinum}"
                        Width="14*"
                        ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                        Header="Gold"
                        Binding="{Binding Gold}"
                        Width="14*"
                        ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                        Header="Electrum"
                        Binding="{Binding Electrum}"
                        Width="14*"
                        ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                        Header="Silver"
                        Binding="{Binding Silver}"
                        Width="14*"
                        ElementStyle="{StaticResource ColumnElementStyle}"/>
                            <DataGridTextColumn
                        Header="Copper"
                        Binding="{Binding Copper}"
                        Width="14*"
                        ElementStyle="{StaticResource ColumnElementStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
