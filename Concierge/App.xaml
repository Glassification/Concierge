<Application x:Class="Concierge.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Interfaces/MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Properties/Resources/Dictionary/WindowFontStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/PageFontStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/ButtonStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/ComboBoxStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/DataGridStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/TreeViewStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/CheckBoxStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/RadioButtonStyling.xaml"/>
                <ResourceDictionary Source="Properties/Resources/Dictionary/ScrollbarStyling.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
