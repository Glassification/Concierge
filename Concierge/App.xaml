<Application x:Class="Concierge.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup"
             ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Interfaces/Dictionary/WindowFontDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/PageFontDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/ButtonDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/ComboBoxDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/DataGridDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/TreeViewDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/CheckBoxDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/RadioButtonDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/ScrollbarDictionary.xaml"/>
                <ResourceDictionary Source="Interfaces/Dictionary/ToolTipDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
