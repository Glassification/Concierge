<Application 
    x:Class="Concierge.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Concierge"
    StartupUri="Presentation/MainWindow.xaml"
    ShutdownMode="OnMainWindowClose">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionary/WindowFontStyling.xaml"/>
                <ResourceDictionary Source="Resources/Dictionary/PageFontStyling.xaml"/>
                <ResourceDictionary Source="Resources/Dictionary/ButtonStyling.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
