        <!--Weapons-->
        <Grid Grid.Row="2" Margin="3" x:Name="WeaponGrid" Background="#0B061E">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="85*"/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid 
                Grid.Row="0"
                Background="#0B061E"
                Margin="3, 3, 3, 0">
                <TextBlock 
                    Text="Weapons and Attacks"
                    Foreground="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="30"
                    FontWeight="Bold"
                    Margin="15, 0, 0, 0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <components:ConciergeButton 
                        x:Name="ButtonUp"
                        Height="50"
                        Width="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        
                        Foreground="SteelBlue"
                        Click="ButtonUp_Click"
                        ToolTip="Move Item Up">
                        <materialDesign:PackIcon Kind="ArrowUp" Width="25" Height="25"/>
                    </components:ConciergeButton>
                    <components:ConciergeButton 
                        x:Name="ButtonDown"
                        Height="50"
                        Width="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        
                        Foreground="SteelBlue"
                        Click="ButtonDown_Click"
                        ToolTip="Move Item Down">
                        <materialDesign:PackIcon Kind="ArrowDown" Width="25" Height="25"/>
                    </components:ConciergeButton>
                    <components:ConciergeButton 
                        x:Name="ButtonClear"
                        Height="50"
                        Width="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        
                        Foreground="Silver"
                        Click="ButtonClear_Click"
                        ToolTip="Clear Selected Item">
                        <materialDesign:PackIcon Kind="Cancel" Width="25" Height="25"/>
                    </components:ConciergeButton>
                    <Label 
                        Height="50"
                        Width="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        />
                    <components:ConciergeButton 
                        x:Name="ButtonAdd"
                        Height="50"
                        Width="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        
                        Foreground="PaleGreen"
                        Click="ButtonAdd_Click"
                        ToolTip="Add New Item">
                        <materialDesign:PackIcon Kind="Add" Width="25" Height="25"/>
                    </components:ConciergeButton>
                    <components:ConciergeButton 
                        x:Name="ButtonEdit"
                        Height="50"
                        Width="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        
                        Foreground="PaleGoldenrod"
                        Click="ButtonEdit_Click"
                        ToolTip="Edit Selected Item">
                        <materialDesign:PackIcon Kind="Edit" Width="25" Height="25"/>
                    </components:ConciergeButton>
                    <components:ConciergeButton 
                        x:Name="ButtonDelete"
                        Height="50"
                        Width="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        
                        Foreground="IndianRed"
                        Click="ButtonDelete_Click"
                        ToolTip="Delete Selected Item">
                        <materialDesign:PackIcon Kind="Delete" Width="25" Height="25"/>
                    </components:ConciergeButton>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <components:ConciergeDataGrid 
                    x:Name="WeaponDataGrid"
                    AutoGenerateColumns="False"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Background="#17112E"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    Margin="5, 5, 5, 5"
                    HorizontalGridLinesBrush="Transparent"
                    VerticalGridLinesBrush="Transparent"
                    CanUserResizeColumns="False"
                    CanUserAddRows="False"
                    BorderThickness="0"
                    Style="{DynamicResource DGHeaderStyle}"
                    SelectionMode="Single"
                    Sorted="WeaponDataGrid_Sorted">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="Name"
                            Binding="{Binding Name}"
                            Width="0.2*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                        <DataGridTextColumn
                            Header="Attack Bonus"
                            Binding="{Binding Attack}"
                            Width="0.1*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                        <DataGridTextColumn
                            Header="Ability"
                            Binding="{Binding Ability}"
                            Width="0.1*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                        <DataGridTextColumn
                            Header="Damage"
                            Binding="{Binding Damage}"
                            Width="0.1*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                        <DataGridTextColumn
                            Header="Misc Bonus"
                            Binding="{Binding Misc}"
                            Width="0.1*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                        <DataGridTextColumn
                            Header="Damage Type"
                            Binding="{Binding DamageType}"
                            Width="0.1*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                        <DataGridTextColumn
                            Header="Range"
                            Binding="{Binding Range}"
                            Width="0.1*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                        <DataGridTextColumn
                            Header="Notes"
                            Binding="{Binding Note}"
                            Width="0.20*"
                            ElementStyle="{StaticResource ColumnElementStyle}"/>
                    </DataGrid.Columns>
                </components:ConciergeDataGrid>
            </Grid>
        </Grid>
