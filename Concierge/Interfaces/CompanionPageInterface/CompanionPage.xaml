        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="37*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="38*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <!--Name-->
                    <Grid Margin="3,15,3,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="70*"/>
                        </Grid.ColumnDefinitions>

                        <!--Name-->
                        <Grid Grid.Column="0" Background="#0B061E">
                            <components:ConciergeButton 
                                x:Name="EditPropertiesButton"
                                Height="30"
                                Width="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                
                                Foreground="PaleGoldenrod"
                                Click="EditPropertiesButton_Click"
                                ToolTip="Edit Health">
                                <materialDesign:PackIcon Kind="Edit" Width="25" Height="25"/>
                            </components:ConciergeButton>

                            <TextBlock 
                                Text="Name"
                                Foreground="White"
                                FontSize="30"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap"/>
                        </Grid>

                        <!--Value-->
                        <Grid Grid.Column="1" Background="#17112E">
                            <TextBlock 
                                x:Name="NameField"
                                Foreground="White"
                                FontSize="22"
                                FontWeight="Bold"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
