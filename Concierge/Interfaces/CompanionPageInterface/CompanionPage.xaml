                    </Grid.ColumnDefinitions>

                    <!--Perception-->
                    <Grid Grid.Column="0" Margin="3,10,3,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25*"/>
                            <RowDefinition Height="75*"/>
                        </Grid.RowDefinitions>

                        <!--Name-->
