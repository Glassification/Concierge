                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontWeight="Bold"
                        Margin="5, 5, 15, 10"/>

                    <components:ConciergeButton 
                        x:Name="TakeDamageButton"
                        Height="35"
                        Width="35"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        
