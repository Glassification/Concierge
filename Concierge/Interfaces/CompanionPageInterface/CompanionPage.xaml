            <!--AC-->
            <Grid Grid.Column="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>

                <!--Header-->
                <Grid Grid.Row="0" Margin="3, 3, 3, 0" Background="#0B061E">
                    <TextBlock 
                        Text="AC"
                        Foreground="White"
                        FontSize="30"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>

                <!--AC-->
                <Grid 
                    Grid.Row="1"
                    Margin="3, 0, 3, 3"
                    Background="#17112E"
                   x:Name="ArmorClassBox">
                    <materialDesign:PackIcon 
                        Kind="Shield"
                        FontStretch="Expanded"
                        Foreground="DimGray"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="{Binding Path=ShieldWidth}"
                        Height="{Binding Path=ShieldHeight}"/>
                    <TextBlock 
                        x:Name="ArmorClassField"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="60"
                        FontWeight="Bold"/>
                </Grid>
            </Grid>
