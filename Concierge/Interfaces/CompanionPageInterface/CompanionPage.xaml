                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!--Name-->
                <Grid Grid.Column="0" Background="#0B061E">
                    <components:ConciergeButton 
                        x:Name="EditAttributesButton"
                        Height="35"
                        Width="35"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        
                        Foreground="PaleGoldenrod"
                        Click="EditAttributesButton_Click"
                        ToolTip="Edit Attributes">
                        <materialDesign:PackIcon Kind="Edit" Width="25" Height="25"/>
                    </components:ConciergeButton>
                    <TextBlock 
                        Text="Strength"
                        Foreground="White"
                        FontSize="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"/>
                </Grid>
                <!--Bonus-->
                <Grid Grid.Row="1" Background="#17112E">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition Width="19*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <TextBlock 
                            Text="Bonus"
                            Margin="5"
                            Foreground="White"
                            FontSize="15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontStyle="Italic"/>
                    </Grid>
                    <Grid Grid.Column="1" Grid.ColumnSpan="2">
                        <TextBlock 
                            x:Name="StrengthBonusField"
                            Foreground="White"
                            FontSize="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="Bold"/>
                    </Grid>
                </Grid>
                <!--Score-->
                <Grid Grid.Row="2" Background="#161223">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <TextBlock 
                            Text="Score"
                            Margin="5"
                            Foreground="White"
                            FontSize="15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontStyle="Italic"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock 
                            x:Name="StrengthScoreField"
                            Foreground="White"
                            FontSize="18"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Grid>
