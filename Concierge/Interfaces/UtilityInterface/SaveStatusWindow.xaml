<components:ConciergeWindow
    x:Class="Concierge.Interfaces.UtilityInterface.SaveStatusWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:Concierge.Interfaces.Components"
    Title="SaveStatusWindow"
    Height="70"
    Width="250"
    WindowStartupLocation="CenterOwner"
    Style="{StaticResource WindowXboxDasboardStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock
                x:Name="SavingTextBlock"
                Text="Saving..."
                Foreground="White"
                FontSize="14"
                Margin="10,3,0,0"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <ProgressBar
                x:Name="SaveProgressBar"
                Minimum="0"
                Maximum="100"
                Margin="10,0,10,0"/>
        </Grid>
    </Grid>
</components:ConciergeWindow>
