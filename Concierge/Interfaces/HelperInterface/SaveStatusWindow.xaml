<Window x:Class="Concierge.Interfaces.HelperInterface.SaveStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConciergeMessageWindow"
        Height="50"
        Width="250"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        Background="#252526"
        ResizeMode="NoResize"
        BorderThickness="1"
        BorderBrush="#227EA9"
        Style="{StaticResource WindowXboxDasboardStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <ProgressBar
                x:Name="SaveProgressBar"
                Minimum="0"
                Maximum="100"
                Margin="10,0,10,0"/>
        </Grid>
    </Grid>
</Window>
