                            VerticalAlignment="Center"
                            Margin="10, 0, 0, 0"/>
                    </Grid>

                    <!--Value-->
                    <Grid Grid.Column="1">
                        <components:ConciergeComboBox
                            Style="{StaticResource ComboBoxStyle}"
                            x:Name="NatureComboBox"
                            IsEditable="False"/>
                    </Grid>
                </Grid>

                <!--Religion-->
                <Grid Grid.Row="8">
                    <Grid.ColumnDefinitions>
