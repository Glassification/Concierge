                    Margin="150, 0, 0, 0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <components:ConciergeToggleButton
                        Style="{StaticResource ConciergeToggleButtonStyle}"
                        x:Name="RealNamesToggleButton"
                        Width="60"
                        Foreground="SteelBlue"
                        Margin="10, 0, 10, 0"
                        ToolTip="Use Real Names">
                        <materialDesign:PackIcon Kind="AccountQuestion" Height="25" Width="25"/>
                    </components:ConciergeToggleButton>
                    <components:ConciergeDesignButton 
                        Style="{StaticResource ConciergeDesignButtonStyle}" 
                        x:Name="ButtonDivideLoot"
                        Width="60"
                        Foreground="SteelBlue"
                        Click="ButtonDivideLoot_Click"
                        Margin="10, 0, 10, 0"
                        ToolTip="Divide Loot">
                        <materialDesign:PackIcon Kind="Calculator" Height="25" Width="25"/>
                    </components:ConciergeDesignButton>
                    <components:ConciergeDesignButton 
                        Style="{StaticResource ConciergeDesignButtonStyle}" 
                        x:Name="ButtonResetLoot"
                        Width="60"
                        Foreground="SteelBlue"
                        Click="ButtonResetLoot_Click"
                        Margin="10, 0, 60, 0"
                        ToolTip="Clear Loot">
                        <materialDesign:PackIcon Kind="RefreshCircle" Height="25" Width="25"/>
                    </components:ConciergeDesignButton>
                </StackPanel>
            </Grid>

            <!--Body-->
            <Grid Grid.Row="1"
                  Background="#000917"
                  Margin="3, 0, 3, 3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <!--Input-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16*"/>
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="16*" />
                    </Grid.RowDefinitions>

                    <!--Players-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#33415C"
                              Margin="3, 3, 0, 3">
                            <TextBlock 
                                Text="Players"
                                Foreground="White"
                                FontSize="20"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <components:ConciergeTextBox 
                                x:Name="PlayersInput"
                                Background="#ff3e3e42"
                                FontSize="20"
                                HorizontalContentAlignment="Center"
                                MaxLength="5"
                                GotFocus="Input_GotFocus"
                                LostFocus="Input_LostFocus"
                                TextChanged="PlayersInput_TextChanged"/>
                        </Grid>
                    </Grid>

                    <!--Copper-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ffb87333"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Copper"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <components:ConciergeTextBox 
                                x:Name="CopperInput"
                                Background="#ff3e3e42"
                                FontSize="20"
                                HorizontalContentAlignment="Center"
                                MaxLength="10"
                                GotFocus="Input_GotFocus"
                                LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Silver-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="Silver"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Silver"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <components:ConciergeTextBox 
                                x:Name="SilverInput"
                                Background="#ff3e3e42"
                                FontSize="20"
                                HorizontalContentAlignment="Center"
                                MaxLength="10"
                                GotFocus="Input_GotFocus"
                                LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Electrum-->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ff50c878"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Electrum"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <components:ConciergeTextBox 
                                x:Name="ElectrumInput"
                                Background="#ff3e3e42"
                                FontSize="20"
                                HorizontalContentAlignment="Center"
                                MaxLength="10"
                                GotFocus="Input_GotFocus"
                                LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Gold-->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ffCFB53B"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Gold"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <components:ConciergeTextBox 
                                x:Name="GoldInput"
                                Background="#ff3e3e42"
                                FontSize="20"
                                HorizontalContentAlignment="Center"
                                MaxLength="10"
                                GotFocus="Input_GotFocus"
                                LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Grid>

                    <!--Platinum-->
                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="55*"/>
                        </Grid.ColumnDefinitions>

                        <!--Label-->
                        <Grid Grid.Column="0"
                              Background="#ffe5e4e2"
                              Margin="3, 3, 0, 3">
                            <TextBlock Text="Platinum"
                                       Foreground="Black"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"/>
                        </Grid>

                        <!--Input-->
                        <Grid Grid.Column="1"
                              Background="#FF3e3e42"
                              Margin="0, 3, 3, 3">
                            <components:ConciergeTextBox 
                                x:Name="PlatinumInput"
                                Background="#ff3e3e42"
                                FontSize="20"
                                HorizontalContentAlignment="Center"
                                MaxLength="10"
                                GotFocus="Input_GotFocus"
                                LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Grid>

                </Grid>

                <!--Loot Grid-->
                <Grid Grid.Column="1"
                      Margin="3, 0, 3, 3">
                    <components:ConciergeDataGrid 
                        x:Name="DivideLootDataGrid"
                        Background="#001233"
                        MaxHeight="{Binding Path=AbilitiesHeight}"
                        Style="{DynamicResource ToolsDataGridStyle}"
                        SelectionChanged="DivideLootDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="Player"
                                Binding="{Binding Name}"
                                Width="16*"
                                ElementStyle="{StaticResource StandardColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Total"
                                Binding="{Binding Total}"
                                Width="14*"
                                ElementStyle="{StaticResource StandardColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Platinum"
                                Binding="{Binding Platinum}"
                                Width="14*"
                                ElementStyle="{StaticResource StandardColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Gold"
                                Binding="{Binding Gold}"
                                Width="14*"
                                ElementStyle="{StaticResource StandardColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Electrum"
                                Binding="{Binding Electrum}"
                                Width="14*"
                                ElementStyle="{StaticResource StandardColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Silver"
                                Binding="{Binding Silver}"
                                Width="14*"
                                ElementStyle="{StaticResource StandardColumnElementStyle}"/>
                            <DataGridTextColumn
                                Header="Copper"
                                Binding="{Binding Copper}"
                                Width="14*"
                                ElementStyle="{StaticResource StandardColumnElementStyle}"/>
                        </DataGrid.Columns>
                    </components:ConciergeDataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
